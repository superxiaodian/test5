<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>
            <div class="blogs content">
                <h2>
                    <%= title %>
                </h2>
                <% if(blogs.length > 0) {%>
                    <% blogs.forEach(blog => { %>
                        <h3>
                            <a href="/blog/<%= blog.id %>"><%= blog.title %></a>
                        </h3>
                        <p>
                            <%= blog.snippet %>
                        </p>
                    <% }) %>
                <% } else {%>
                    <p>没有任何博客内容</p>
                <% }%>
            </div>
            <%- include("./partials/foot.ejs") %>
    </body>
</html>